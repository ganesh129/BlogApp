<h1>Edit  Blog</h1>
<% include ./partials/header %>
<div class="ui main text container  segment">
    <div class="ui huge header">Edit Blog</div>
    <!-- method override package will look for _method and if we pass PUT/delete then it will send put/delete request -->
    <!-- because html form can't make put request (ony get/post) -->
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div>
               <label>Title</label>
                <input type="text" name="blog[Title]" value="<%= blog.Title %>">
        </div>
   <div>
       <label>Image</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
  </div>
    <div>
        <label>Write Blog></label>
            <!-- <input type="text" name="ganesh[describe]" placeholder="blog boody here"> -->
            <textarea name="blog[body]"><%=blog.body%></textarea>
    </div>
    
    <input class="ui pink basic button" type="submit">
   
    </form>
</div>
<% include ./partials/footer %>